\label{tab:matrice_criticite}
\end{table}

\textbf{Priorisation des actions :}
\begin{itemize}
    \item \textbf{Zone rouge (score 6-9)} : 6 risques nécessitant actions immédiates
    \item \textbf{Zone orange (score 3-5)} : 6 risques à surveiller activement
    \item \textbf{Zone verte (score 1-2)} : 3 risques à monitoring passif
\end{itemize}

\subsection{Plans de réponse détaillés}

\subsubsection{Risque critique 1 : Performance modèles insuffisante}

\textbf{Stratégie} : Mitigation + Plan de contingence

\textbf{Actions préventives :}
\begin{itemize}
    \item Tests de performance dès Sprint 3
    \item Optimisation hyperparamètres (Bayesian optimization)
    \item Validation croisée rigoureuse (5 folds)
    \item Benchmark avec baseline (régression linéaire)
\end{itemize}

\textbf{Plan de contingence :}
\begin{itemize}
    \item \textbf{Si R² < 0.75} : Enrichir features, tester autres algorithmes
    \item \textbf{Si R² < 0.70} : Collecter plus de données, revoir features
    \item \textbf{Si R² < 0.65} : Escalader, revoir approche ML
\end{itemize}

\textbf{Indicateurs d'alerte :}
\begin{itemize}
    \item R² validation < 0.75 après Sprint 3
    \item MAE > 20 minutes après tuning
    \item Gap train-validation > 15\%
\end{itemize}

\subsubsection{Risque critique 2 : Intégration avec G.Pro}

\textbf{Stratégie} : Mitigation + Transfert partiel

\textbf{Actions préventives :}
\begin{itemize}
    \item Tests d'intégration dès Sprint 1
    \item API REST standardisée (OpenAPI spec)
    \item Environnement de test isolé
    \item Documentation API complète
\end{itemize}

\textbf{Plan de contingence :}
\begin{itemize}
    \item \textbf{Si API indisponible} : Import CSV manuel temporaire
    \item \textbf{Si format incompatible} : Couche d'adaptation
    \item \textbf{Si performance faible} : Cache + batch processing
\end{itemize}

\subsubsection{Risque critique 3 : Adoption utilisateurs faible}

\textbf{Stratégie} : Mitigation + Acceptation partielle

\textbf{Actions préventives :}
\begin{itemize}
    \item Co-conception avec utilisateurs finaux
    \item Formation intensive (2 jours)
    \item Champions utilisateurs identifiés
    \item Support dédié pendant 3 mois
    \item Quick wins démontrés rapidement
\end{itemize}

\textbf{Plan de contingence :}
\begin{itemize}
    \item \textbf{Si adoption < 70\%} : Formation supplémentaire, ajustements UX
    \item \textbf{Si adoption < 50\%} : Revoir interface, simplifier workflow
    \item \textbf{Si adoption < 30\%} : Analyse causes, refonte majeure
\end{itemize}

\subsection{Monitoring et reporting}

\textbf{Fréquence de revue :}
\begin{itemize}
    \item \textbf{Quotidien} : Risques critiques (score ≥ 6)
    \item \textbf{Hebdomadaire} : Tous les risques actifs (Sprint Review)
    \item \textbf{Mensuel} : Registre complet (Comité de pilotage)
\end{itemize}

\textbf{Indicateurs de suivi :}
\begin{itemize}
    \item Nombre de risques par catégorie et niveau
    \item Évolution du score de risque global
    \item Taux de matérialisation des risques
    \item Efficacité des plans de mitigation
\end{itemize}

\section{Plan de Communication}

\subsection{Stakeholders}
\begin{itemize}
    \item \textbf{Sponsor Exécutif} : Directeur de production
    \item \textbf{Utilisateurs Finaux} : Responsables d'atelier, opérateurs
    \item \textbf{Équipe Technique} : Développeurs, data scientists
    \item \textbf{Support IT} : Administrateurs système, sécurité
\end{itemize}

\subsection{Cadence de Communication}
\begin{itemize}
    \item \textbf{Daily Standups} : Quotidien, équipe de développement
    \item \textbf{Sprint Reviews} : Bi-hebdomadaire, stakeholders
    \item \textbf{Sprint Planning} : Bi-hebdomadaire, équipe complète
    \item \textbf{Rétrospectives} : Bi-hebdomadaire, équipe de développement
    \item \textbf{Steering Committee} : Mensuel, direction
\end{itemize}

\section{Plan de Formation et Adoption}

\subsection{Formation des Utilisateurs}
\begin{itemize}
    \item \textbf{Formation initiale} : 2 jours pour les responsables d'atelier
    \item \textbf{Formation pratique} : 1 jour pour les opérateurs
    \item \textbf{Support continu} : Documentation, FAQ, hotline
    \item \textbf{Formation avancée} : Modules optionnels pour les power users
\end{itemize}

\subsection{Stratégie d'Adoption}
\begin{itemize}
    \item \textbf{Pilote} : Déploiement sur un atelier pilote (Sprint 10)
    \item \textbf{Rollout progressif} : Extension aux autres ateliers (Sprints 11-12)
    \item \textbf{Champions} : Identification d'utilisateurs référents
    \item \textbf{Feedback loop} : Collecte continue des retours utilisateurs
\end{itemize}

\section{Plan de Maintenance et Évolution}

\subsection{Maintenance Préventive}
\begin{itemize}
    \item \textbf{Monitoring continu} : Surveillance 24/7 des performances
    \item \textbf{Mises à jour de sécurité} : Patches mensuels
    \item \textbf{Sauvegardes} : Sauvegardes quotidiennes des données et modèles
    \item \textbf{Tests de récupération} : Tests trimestriels de disaster recovery
\end{itemize}

\subsection{Évolution du Système}
\begin{itemize}
    \item \textbf{Nouvelles fonctionnalités} : Développement trimestriel
    \item \textbf{Amélioration des modèles} : Réentraînement mensuel
    \item \textbf{Optimisation des performances} : Amélioration continue
    \item \textbf{Intégrations} : Connexion avec nouveaux systèmes
\end{itemize}

